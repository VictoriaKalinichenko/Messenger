@using Messenger.Entity;

@{
    ViewData["Title"] = "Home Page";
}

@model User

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.UserName)

<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-4">
        <div class="user-box">
            <div class="list-group"></div>
        </div>
    </div>
    <div class="col-8">
        <div class="row message-box" id="messageBox">
            <ul id="messageList" class="w-100 p-2"><li class="w-100" id='empty-message-list'><div class="row col-sm-12"><p class="w-100 text-center empty-text">Select a user to see messages</p></div></li></ul>
        </div>

        <div class="row mt-2 d-flex justify-content-between">
            <input class="col-sm-10 form-control box-shadow" type="text" id="messageInput" placeholder="Type your message" disabled/>
            <button class="col-sm-1 btn btn-primary box-shadow px-0" id="sendButton" disabled>Send</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/home-index.js"></script>
}
